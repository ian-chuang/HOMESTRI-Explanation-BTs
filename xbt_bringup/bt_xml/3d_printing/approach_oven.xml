<root>
<!-- 
    outputs: 
      - tag_pose
  -->
    <BehaviorTree ID="approach oven">
        <Sequence name="approach drawer">

            <!-- detect tag pose -->
            <Explain name="detect drawer position">
                <Delay delay_msec="1000">
                    <DetectFrameAction 
                        source_frame="oven_tag_frame" 
                        target_frame="world" 
                        output_pose="{tag_pose}"
                        timeout="1000"
                        qx="0"
                        qy="0"
                        qz="0"
                        qw="1"
                    />
                </Delay>
            </Explain>

            <Explain name="move towards drawer">
                <Sequence name="approach tag">

                    <TransformPoseAction
                        input_pose="{tag_pose}"
                        translation_xyz="-0.2;0;-0.05"
                        output_pose="{approach_tag_pose}"
                    />

                    <SubTree
                        ID="move"
                        name="move"
                        mode="POSE_LINE"
                        pose="{approach_tag_pose}"
                        pose_frame_id="world"
                        vel_scaling="0.05"
                        acc_scaling="0.05"
                    /> 

                    <DetectFrameAction 
                        source_frame="oven_tag_frame" 
                        target_frame="world" 
                        output_pose="{tag_pose}"
                        wait_duration="1000"
                        timeout="1000"
                        qx="0"
                        qy="0"
                        qz="0"
                        qw="1"
                    />
                </Sequence>
            </Explain>

            

        </Sequence>
    </BehaviorTree>
</root>