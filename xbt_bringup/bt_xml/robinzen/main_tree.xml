<root main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
        <Sequence name="inspect Robinzen">

            <!-- go to start position -->
            <SubTree
                ID="go to start position"
                name="go to start position"
            />

            <!-- get tag location  -->
            <SubTree
                ID="get tag location"
                name="get tag location"
                tag_pose="{tag_pose}"
            />

            <!-- open latch 1 -->
            <SubTree
                ID="open latch"
                name="open latch 1"
                latch_name="latch 1"
                tag_pose="{tag_pose}"
                latch_offset="0;-0.2675;-0.04"
            />

            <!-- open latch 2 -->
            <SubTree
                ID="open latch"
                name="open latch 2"
                latch_name="latch 2"
                tag_pose="{tag_pose}"
                latch_offset="0;-0.2675;-0.3876625"
            />

            <!-- open drawer -->
            <SubTree
                ID="open drawer"
                name="open drawer"
                tag_pose="{tag_pose}"
                handle_offset="-0.08;0;-0.15"
            />

            <!-- inspect drawer -->
            <SubTree
                ID="inspect drawer"
                name="inspect drawer"
                tag_pose="{tag_pose}"
                inspect_offset="-0.38;0;0.11"
            />

            



        </Sequence>
    </BehaviorTree>
</root>