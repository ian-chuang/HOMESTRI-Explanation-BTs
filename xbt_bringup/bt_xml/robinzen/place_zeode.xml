<root>
    <!-- 
    inputs: 
        - rack_pose
  -->
    <BehaviorTree ID="place zeode">
        <Sequence name="transfer zeode">
             
             <TransformPoseAction
                input_pose="{rack_pose}"
                translation_xyz="-0.2; 0.005; 0"
                output_pose="{rack_approach}"
            />

            <!--TransformPoseAction
                input_pose="{rack_pose}"
                translation_xyz="-0.05;0;0"
                output_pose="{zeode_find_surface}"
            /-->


            <SubTree
                ID="move"
                name="move to precontact position"
                mode="POSE_LINE"
                pose="{rack_approach}"
                pose_frame_id="world"
                vel_scaling="0.05"
                acc_scaling="0.05"
            /> 

            <!--SubTree
                ID="move"
                name="move"
                mode="POSE_LINE"
                pose="{zeode_find_surface}"
                pose_frame_id="world"
                vel_scaling="0.01"
                acc_scaling="0.01"
            /--> 
             

            <SubTree
                ID="find surface"
                force_target="15"
                force_threshold="10"
            /> 



            <SubTree
                ID="apply force"
                controller="cartesian_compliance_controller_follow_trajectory"
                msec="3000"
                wrench="0;0;-50;0;0;0"
                wrench_frame_id="world"
            />


            <!-- switch back to joint traj ctrl -->
            <SwitchControllerAction 
                name="switch to position controller"
                service_name="controller_manager/switch_controller"
                controller="scaled_pos_joint_traj_controller"
            />

            <GripperAction
                server_name="/gripper_controller/gripper_cmd"
                position="0"
                max_effort="100"
            /> 

            <SubTree
                ID="move"
                name="move"
                mode="POSE_LINE"
                pose="{rack_approach}"
                pose_frame_id="world"
                vel_scaling="0.01"
                acc_scaling="0.01"
            /> 

        </Sequence>
    </BehaviorTree>

</root>