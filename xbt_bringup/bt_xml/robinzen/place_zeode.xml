<root>
    <!-- 
    inputs: 
        - zeode_pose
  -->
    <BehaviorTree ID="place zeode">
        <Sequence name="transfer zeode">
             
             <TransformPoseAction
                input_pose="{zeode_pose}"
                translation_xyz="-0.05;0;0"
                output_pose="{zeode_middle_pose}"
            />

            <SubTree
                ID="move"
                name="move"
                mode="POSE_LINE"
                pose="{zeode_middle_pose}"
                pose_frame_id="world"
                vel_scaling="0.01"
                acc_scaling="0.01"
            /> 
             

            <SubTree
                ID="find surface"
                force_target="15"
                force_threshold="10"
            /> 

            <SubTree
                ID="apply force"
                controller="cartesian_compliance_controller_follow_trajectory"
                msec="2000"
                wrench="0;0;0;0;0;0"
                wrench_frame_id="world"
            />

            <SubTree
                ID="apply force"
                controller="cartesian_compliance_controller_follow_trajectory"
                msec="3000"
                wrench="0;0;-40;0;0;0"
                wrench_frame_id="world"
            />


            <!-- switch back to joint traj ctrl -->
            <SwitchControllerAction 
                name="switch to position controller"
                service_name="controller_manager/switch_controller"
                controller="scaled_pos_joint_traj_controller"
            />

            <GripperAction
                server_name="/gripper_controller/gripper_cmd"
                position="0"
                max_effort="100"
            /> 

            <SubTree
                ID="move"
                name="move"
                mode="POSE_LINE"
                pose="{zeode_middle_pose}"
                pose_frame_id="world"
                vel_scaling="0.01"
                acc_scaling="0.01"
            /> 

        </Sequence>
    </BehaviorTree>

</root>