<root>
    <!-- 
    inputs: 
      - tag_pose
      - handle_offset
  -->
    <BehaviorTree ID="inspect drawer">
        <Sequence name="inspect drawer">
            <Explain name="look inside drawer">

                <Sequence>
                    <!-- position control -->
                    <SwitchControllerAction 
                        name="switch to position controller"
                        service_name="controller_manager/switch_controller"
                        controller="scaled_pos_joint_traj_controller"
                    />

                    <TransformPoseAction
                        name="calculate inspect drawer location"
                        input_pose="{tag_pose}"
                        translation_xyz="{handle_offset}"
                        output_pose="{handle_pose}"
                    /> 

                    <TransformPoseAction
                        name="calculate raise pos"
                        input_pose="{handle_pose}"
                        translation_xyz="0;0;0.3"
                        quaternion_xyzw="-0.5;-0.5;0.5;-0.5"
                        output_pose="{raise_pose}"
                    /> 

                    <TransformPoseAction
                        name="calculate inspect pos"
                        input_pose="{raise_pose}"
                        translation_xyz="0.1;0;0"
                        quaternion_xyzw="-0.5;-0.5;0.5;-0.5"
                        output_pose="{inspect_pose}"
                    /> 

                    <!-- plan to inspect pose -->
                    <SimplePlanAction
                        name="plan to inspect drawer"
                        service_name="/planning_interface/simple_plan"
                        mode="POSE_LINE"
                        pose="{raise_pose}"
                        pose_frame_id="world"
                        vel_scaling="0.06"
                        acc_scaling="0.06"
                        joint_trajectory="{joint_trajectory}"
                    />

                    <!-- move to inspect pose -->
                    <JointTrajectoryAction
                        name="move to inspect drawer"
                        server_name="/scaled_pos_joint_traj_controller/follow_joint_trajectory"
                        joint_trajectory="{joint_trajectory}"
                    /> 

                    <!-- plan to inspect pose -->
                    <SimplePlanAction
                        name="plan to inspect drawer"
                        service_name="/planning_interface/simple_plan"
                        mode="POSE_LINE"
                        pose="{inspect_pose}"
                        pose_frame_id="world"
                        vel_scaling="0.06"
                        acc_scaling="0.06"
                        joint_trajectory="{joint_trajectory}"
                    />

                    <!-- move to inspect pose -->
                    <JointTrajectoryAction
                        name="move to inspect drawer"
                        server_name="/scaled_pos_joint_traj_controller/follow_joint_trajectory"
                        joint_trajectory="{joint_trajectory}"
                    /> 
                </Sequence>

            </Explain>

            


            <Fallback name="replace zeolite if necessary">

                <Explain name="run zeolite degradation check">
                    <ForceSuccess>
                        <Sequence>
                            <TriggerAction service_name="/run_yolo" />
                            <Sleep msec="10000" />
                            <TriggerAction service_name="/clear_yolo" />
                        </Sequence>
                    </ForceSuccess>
                </Explain>

                <Sleep 
                    name="replace zeolite"
                    msec="3000"
                />

            </Fallback>

        </Sequence>
    </BehaviorTree>

</root>