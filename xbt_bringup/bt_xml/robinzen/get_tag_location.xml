<root>
<!-- 
    outputs: 
      - tag_pose
  -->
    <BehaviorTree ID="get tag location">
        <Sequence name="get tag location">

            <Sequence name="scan for tag location">

                <!-- detect tag pose -->
                <DetectFrameAction 
                    name="detect tag pose"
                    source_frame="tag_frame" 
                    target_frame="world" 
                    output_pose="{tag_pose}"
                    wait_duration="1000"
                    timeout="1000"
                    qx="0"
                    qy="0"
                    qz="0"
                    qw="1"
                />

                <!-- calculate pose for approaching tag -->
                <TransformPoseAction
                    name="calculate pose for approaching tag"
                    input_pose="{tag_pose}"
                    translation_xyz="-0.3;0;-0.05"
                    output_pose="{approach_tag_pose}"
                />

            </Sequence>

            
            <Sequence name="approach tag">
                <!-- position control -->
                <SwitchControllerAction 
                    name="switch to joint trajectory controller"
                    service_name="controller_manager/switch_controller"
                    controller="scaled_pos_joint_traj_controller"
                />

                <!-- plan to approach tag pose -->
                <SimplePlanAction
                    name="plan to approach tag"
                    service_name="/planning_interface/simple_plan"
                    mode="POSE_LINE"
                    pose="{approach_tag_pose}"
                    pose_frame_id="world"
                    vel_scaling="0.03"
                    acc_scaling="0.03"
                    joint_trajectory="{joint_trajectory}"
                />

                <!-- move to approach tag pose -->
                <JointTrajectoryAction
                    name="approach tag"
                    server_name="/scaled_pos_joint_traj_controller/follow_joint_trajectory"
                    joint_trajectory="{joint_trajectory}"
                /> 
            </Sequence>

            <!-- detect tag pose again for a more accurate position-->
            <DetectFrameAction 
                name="scan tag location"
                source_frame="tag_frame" 
                target_frame="world" 
                output_pose="{tag_pose}"
                wait_duration="1000"
                timeout="1000"
                qx="0"
                qy="0"
                qz="0"
                qw="1"
            />

        </Sequence>
    </BehaviorTree>
</root>